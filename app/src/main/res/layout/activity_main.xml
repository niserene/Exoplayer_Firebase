<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <VideoView
        android:id="@+id/videoView_main"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:backgroundTint="@color/black"/>

    <EditText
        android:id="@+id/etext_videoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:autoText="true"
        android:hint="Video name"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_chooseVideo"
        android:text="Choose Video"
        android:backgroundTint="@color/colorCream"
        android:textColor="@color/colorLither"
        android:layout_gravity="center"
        app:cornerRadius="50dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_showVideo"
        android:text="Show Video"
        android:backgroundTint="@color/colorCream"
        android:textColor="@color/colorLither"
        app:cornerRadius="50dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_uploadVideo"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Upload Video"
        android:textColor="@color/colorSecondary"
        android:drawableTint="@color/colorCream"
        android:drawableEnd="@drawable/baseline_cloud_upload_black_24dp"
        android:layout_marginTop="25dp"/>

    <ProgressBar
        android:id="@+id/progressBar_main"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:visibility="invisible"/>



</LinearLayout>